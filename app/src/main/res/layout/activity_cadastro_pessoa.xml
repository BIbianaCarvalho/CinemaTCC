<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brancocreme"
    tools:context=".CadastroPessoa"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/allura"
        android:text="Cadastro"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/editCemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editCemail"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_edittext_redondo"
        android:backgroundTint="@color/creme"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:text="Email"
        android:textColor="@color/cinzinha"
        app:layout_constraintBottom_toTopOf="@+id/Cbotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575" />

    <EditText

        android:id="@+id/editCsenha"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_edittext_redondo"
        android:backgroundTint="@color/creme"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toTopOf="@+id/Cbotao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCemail" />

    <Button
        android:id="@+id/Cbotao"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edittext_redondo"
        android:backgroundTint="@color/rosinha"
        android:fontFamily="@font/hind_guntur"
        android:paddingVertical="7dp"
        android:text="Cadastrar"
        android:textColor="@color/cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />


</androidx.constraintlayout.widget.ConstraintLayout>